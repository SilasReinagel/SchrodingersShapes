{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/cli",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "types": ["node"]
  },
  "include": ["cli/**/*.ts", "src/game/**/*.ts", "src/components/constraints/constraintStatus.ts"],
  "exclude": ["node_modules", "dist"]
}

